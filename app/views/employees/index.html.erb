<table class="table table-striped table-bordered">
  <thead class = 'thead-dark'>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Designation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.name %></td>
        <td><%= employee.age %></td>
        <td><%= employee.gender %></td>
        <td><%= employee.designation %></td>
        <td><%= link_to 'Show', employee,class:'btn btn-secondary' %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee) ,class:'btn btn-secondary'%></td>
        <td><%= link_to 'Delete', employee, method: :delete, class:'btn btn-danger' ,data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

